<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">
    <Button
        android:onClick="tweenTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TweenAnimation"/>
    <Button
        android:onClick="frameTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FrameAnimation"/>
    <Button
        android:onClick="propertyTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropertyAnimator"/>
    <Button
        android:onClick="propertyAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropertyAnalysis"/>
</LinearLayout>